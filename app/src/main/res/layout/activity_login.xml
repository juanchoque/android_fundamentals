<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_login"
    tools:context=".view.LoginView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo_app"/>

            <EditText
                android:id="@+id/txt_user"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="User"
                android:drawableLeft="@drawable/ic_baseline_person_24px"
                android:background="@drawable/back_edittext"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="50dp" />

            <EditText
                android:id="@+id/txt_pass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_baseline_vpn_key_24px"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/back_edittext"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_acept"
                android:layout_width="match_parent"
                android:background="@drawable/back_button"
                android:textColor="@color/colorTextButton"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_acept" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>